fun bubble_sort(arr: Array<number>, i: number, limit: number) {
    if (i < limit) {
        stepinto {
            if (arr[i] > arr[i+1]) {
                arr.swap(i, i+1);
            }
        }
        bubble_sort(arr, i+1, limit);
    }
}

fun sort(arr: Array<number>, n: number) {
    if (n != 1) {
        bubble_sort(arr,0, n -1);
        sort(arr, n-1);
    }
}

